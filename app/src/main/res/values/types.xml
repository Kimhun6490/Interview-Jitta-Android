<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JittaTextStyleHeadline">
        <item name="android:textSize">@dimen/jitta_text_size_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JittaTextStyleTitleBold">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/jitta_text_size_title</item>
    </style>

    <style name="JittaTextStyleTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/jitta_text_size_title</item>
    </style>

    <style name="JittaTextStyleBodyBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/jitta_text_size_body</item>
    </style>

    <style name="JittaTextStyleBody">
        <item name="android:textSize">@dimen/jitta_text_size_body</item>
    </style>

    <style name="JittaTextStyleCaptionBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/jitta_text_size_caption</item>
    </style>

    <style name="JittaTextStyleCaption">
        <item name="android:textSize">@dimen/jitta_text_size_caption</item>
    </style>
</resources>